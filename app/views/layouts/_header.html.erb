<header>
  <div class="mainTop">
    <%= link_to logo, root_path %>
    <% if signed_in? %>
      <div class="right">
        <%= link_to "Sign out", signout_path, :method => :delete %>
      </div>
      <div class="search-bar">
        <%= form_for(:search, :url => searchs_path) do |f1| %>
          <div class="field">
            <%= f1.text_field :find, :placeholder => "Find your goal" %>
            <%= f1.submit "Find" %>
          </div>   
        <% end %>
      </div>
    <% else %>
      <div class="login right">
        <%= link_to "Login", signin_path %>
      </div>
    <% end %>
  </div>
</header>