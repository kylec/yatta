<div id="oneGoalBackground">
    <div id="oneBigGoalStickyNote">
      <%= render :partial => 'goals/goal', :object => @goal %>
    </div>
</div>

<div class="oneGoalOptions">
<% if current_user.created?(@goal) %>
  <%= link_to  "Edit Goal", edit_user_goal_path(current_user.username, @goal.title) %><br>
  <%= form_for @goal, :url => {:action => "destroy"}, :html => {:method => :delete, :id => "edit_goal_#{@goal.title}"} do |f| %>
    <%= f.submit "Delete Goal" %>
  <% end %>
<% end %>
<% if current_user.working?(@goal) %>
  <%= form_for current_user.user_goal_relationships.find_by_goal_id(@goal),
                   :html => {:method => :delete} do |f| %>
  <%= f.submit "Don't Do Me" %>
  <% end %>
<% else %>
  <%= form_for (current_user.user_goal_relationships.build(:goal_id => @goal.id)) do |f| %>
    <div><%= f.hidden_field :goal_id %></div>
    <%= f.submit "Do Me" %>
  <% end %>
<% end %>
</div>